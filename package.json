{
  "name": "biskuvi",
  "module": "src/main.ts",
  "type": "module",
  "scripts": {
    "dev": "bun run clean_scripts && bun build ./src/main.ts --outdir ./scripts --watch",
    "release": "bun run clean_scripts && bun run ./bun_scripts/build_release.ts",
    "clean_scripts": "mkdir -p ./scripts && rm -r ./scripts/*",
    "clean_pack": "mkdir -p ./pack && rm -r ./pack/* && mkdir -p ./pack/biskuvi",
    "clean": "bun run clean_scripts && bun run clean_pack",
    "pack": "bun run clean_pack && cp -r ./manifest.json ./scripts/ ./assets/ ./pack/biskuvi"
  },
  "devDependencies": {
    "@types/bun": "^1.1.12"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
